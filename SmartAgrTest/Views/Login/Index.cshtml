@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - SmartAgrTest</title>
    @Styles.Render("~/bundles/css")
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Hoşgeldiniz!</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="username" class="form-control form-control-user" id="username" placeholder="Kullanıcı Adı">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="password" placeholder="Parola">
                                        </div>
                                        <button onclick="Login()" class="btn btn-primary btn-user btn-block">
                                            Login
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
</body>
</html>
<script type="text/javascript">
    function Login() {
        var account = new Object();
        account.username = $("#username").val();
        account.password = $("#password").val();

        $.ajax({
            type: "POST",
            url: '/Login/Auth',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(account),
            dataType: "json",
            async:false,
            success: function (result) {
                console.log(result);
                if (result.success) {
                    window.location.href = result.url;
                }
                else {
                    alert(result.err);
                }
            }
        });
    }
</script>
